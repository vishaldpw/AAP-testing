---
- name: Launch EC2 Instance
  hosts: localhost
  gather_facts: False
  vars:
    region: ap-south-1  # Mumbai region code
    instance_type: t2.micro
    ami: ami-xxxxxxxxxxxxxxxx  # Ubuntu AMI ID (replace with the latest Ubuntu AMI ID for the specified region)
    key_name: your_key_pair_name  # Replace with your EC2 key pair name
    aws_access_key: "{{ lookup('env', 'AWS_ACCESS_KEY_ID') }}"
    aws_secret_key: "{{ lookup('env', 'AWS_SECRET_ACCESS_KEY') }}"

  tasks:
    - name: Create EC2 instance
      ec2_instance:
        region: "{{ region }}"
        instance_type: "{{ instance_type }}"
        image: "{{ ami }}"
        key_name: "{{ key_name }}"
        count: 1
        wait: true
        assign_public_ip: true
        instance_tags:
          Name: MyInstance

